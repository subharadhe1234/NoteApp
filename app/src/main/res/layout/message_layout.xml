<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/main"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    tools:context=".MessageListActivity">    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        app:cardCornerRadius="20dp"        >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content" >        <LinearLayout            android:id="@+id/message_layout_card"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:elevation="30dp"            android:padding="10dp"            android:orientation="vertical"            android:clickable="true"            >            <TextView                android:id="@+id/out_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingHorizontal="10dp"                android:text="Title"                android:textSize="25dp"                android:textStyle="bold"                />            <TextView                android:id="@+id/out_body"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:padding="10dp"                android:text="Body"                android:textSize="15dp"                android:maxLines="5"                android:ellipsize="end"                />        </LinearLayout>           <!-- <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/next"                android:layout_alignParentRight="true"                android:layout_alignParentBottom="true"                android:id="@+id/next_btn"                android:padding="10dp"                />-->        </RelativeLayout>    </androidx.cardview.widget.CardView></LinearLayout>